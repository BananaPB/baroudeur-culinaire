---
import Breadcrumbs from '@/components/Breadcrumbs.astro'
import PageHead from '@/components/PageHead.astro'
import TheoryCard from '@/components/TheoryCard.astro'
import Layout from '@/layouts/Layout.astro'
import { getAllTags, getPostsByTag, basePath } from '@/lib/theory-utils'

export async function getStaticPaths() {
  const tagMap = await getAllTags(null)
  const uniqueTags = Array.from(tagMap.keys())

  return Promise.all(
    uniqueTags.map(async (tag) => {
      const posts = await getPostsByTag(tag, null)
      return {
        params: { id: tag },
        props: {
          tag,
          posts,
        },
      }
    }),
  )
}

const { tag, posts } = Astro.props
---

<Layout class="max-w-3xl">
  <PageHead
    slot="head"
    title={`Posts tagged with "${tag}"`}
    description={`A collection of posts tagged with ${tag}.`}
    noindex
  />
  <Breadcrumbs
    items={[
      { href: `/tags`, label: 'Tags', icon: 'lucide:tags' },
      { href: `/tags/${basePath}`, label: 'ThÃ©orie', icon: 'lucide:notebook' },
      { label: tag, icon: 'lucide:tag' },
    ]}
  />

  <ul class="flex flex-col gap-y-4">
    {
      posts.map((post) => (
        <li>
          <TheoryCard entry={post} />
        </li>
      ))
    }
  </ul>
</Layout>
