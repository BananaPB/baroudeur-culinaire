{
  "name": "astro-erudite",
  "type": "module",
  "version": "1.6.2",
  "private": true,
  "scripts": {
    "pull:content": "git submodule update --remote --merge",
    "generate:content": "node scripts/generate-content.js",
    "dev": "npm run pull:content && npm run generate:content && astro dev",
    "build": "npm run pull:content && npm run generate:content && astro check && astro build",
    "start": "astro dev",
    "preview": "astro preview",
    "astro": "astro",
    "prettier": "prettier --write **/*.{ts,tsx,css,astro} --ignore-path .gitignore",
    "postinstall": "patch-package"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/markdown-remark": "^6.3.2",
    "@astrojs/mdx": "^4.3.0",
    "@astrojs/react": "^4.3.0",
    "@astrojs/rss": "^4.0.12",
    "@astrojs/sitemap": "^3.4.1",
    "@expressive-code/plugin-collapsible-sections": "^0.40.2",
    "@expressive-code/plugin-line-numbers": "^0.40.2",
    "@iconify-json/lucide": "^1.2.26",
    "@tailwindcss/vite": "^4.0.7",
    "@types/react": "19.0.0",
    "@types/react-dom": "19.0.0",
    "astro": "^5.10.1",
    "astro-collection-search": "0.0.13",
    "astro-expressive-code": "^0.40.2",
    "astro-icon": "^1.1.5",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "fs-extra": "^11.3.0",
    "gray-matter": "^4.0.3",
    "js-yaml": "^4.1.0",
    "lucide-react": "^0.469.0",
    "patch-package": "^8.0.0",
    "radix-ui": "^1.3.4",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "rehype-document": "^7.0.3",
    "rehype-external-links": "^3.0.0",
    "rehype-katex": "^7.0.1",
    "rehype-pretty-code": "^0.14.1",
    "remark-emoji": "^5.0.1",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0",
    "remark-parse": "^11.0.0",
    "remark-stringify": "^11.0.0",
    "slugify": "^1.6.6",
    "tailwind-merge": "^3.3.0",
    "tailwindcss": "^4.1.7",
    "typescript": "^5.8.3",
    "unified": "^11.0.5",
    "vite": "^5.0.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "prettier": "^3.5.1",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-astro-organize-imports": "^0.4.11",
    "prettier-plugin-tailwindcss": "^0.6.11"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "plugins": [
      "prettier-plugin-astro",
      "prettier-plugin-tailwindcss",
      "prettier-plugin-astro-organize-imports"
    ],
    "overrides": [
      {
        "files": "*.astro",
        "options": {
          "parser": "astro"
        }
      }
    ]
  }
}
